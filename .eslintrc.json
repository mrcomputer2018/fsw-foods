{
    "extends": "next/core-web-vitals",
    "rules": {
      "sort-imports": [
        "error", {
          "ignoreCase": true,
          "ignoreDeclarationSort": true,
          "ignoreMemberSort": false
        }
      ],
      "import/order": [
        "error", {
          "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
          "pathGroups": [
            {
              "pattern": "react",
              "group": "external",
              "position": "before"
            }
          ]
        }
      ]
    }
  }